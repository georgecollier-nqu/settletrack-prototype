# SettleTrack Environment Variables
# Copy this file to .env.local and update with your actual values

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SettleTrack

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_BASE_URL=http://localhost:3000

# Authentication
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-secret-key-change-in-production

# Database Configuration
# PostgreSQL example: postgresql://user:password@localhost:5432/settletrack
# MongoDB example: mongodb://localhost:27017/settletrack
DATABASE_URL=

# Third-party Services
# OpenAI API (for AI features)
OPENAI_API_KEY=

# Stripe (for billing features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# Task Master AI Integration
TASK_MASTER_API_KEY=
TASK_MASTER_PROJECT_ID=

# Bubble Integration
BUBBLE_API_KEY=
BUBBLE_APP_ID=
BUBBLE_VERSION=live

# Email Service Configuration
EMAIL_FROM=noreply@settletrack.com

# SendGrid (Option 1)
SENDGRID_API_KEY=

# SMTP (Option 2)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# File Storage (S3 Compatible)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1
S3_BUCKET=settletrack-uploads
S3_ENDPOINT=

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=300

# Legal Data API (if using external service)
LEGAL_DATA_API_KEY=
LEGAL_DATA_API_URL=

# Court Data Integration
PACER_USERNAME=
PACER_PASSWORD=
PACER_API_URL=

# Development Tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_LOG_LEVEL=debug